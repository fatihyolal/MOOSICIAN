<div class="container py-5 h-100">
<% if @received_messages.any? %>
    <%  @received_messages.each do |message| %>
        <div class="message-card col-3 col-m-3 col-xs-16">
            <div class="d-flex p-4">
              <div class="flex-shrink-0">
                 <%= cl_image_tag message.last.user.photo.key %>
              </div>
              <div class="flex-grow-1 ms-3">
                <div class="d-flex justify-content-start rounded-3 p-2 mb-2">
                <div class="details">
                  <div class="name"> <%= message.last.user.first_name %> <%= message.last.user.last_name %> <%= message.last.user.username %></div>
                  <div class="content"></i> <%= message.last.content  %></div>
                  <div class="date"></i> <%= message.last.created_at.strftime("received at %I:%M%p on %m/%d/%Y")  %></div>
                </div>
              </div>
            </div>
        </div>
      <% end %>
<% end %>
  </div>
