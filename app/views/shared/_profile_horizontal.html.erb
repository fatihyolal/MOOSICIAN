<div class="container py-5 h-100">
  <div class="profile-card">
    <div class="d-flex p-3">
      <%= cl_image_tag user.photo.key, class: "avatar-large" %>
      <div class="d-flex flex-column w-100 ms-3 justify-content-between">
        <div>
          <div class="d-flex align-items-center">
            <h3 class="name-username"><%= user.first_name %> <%= user.last_name %></h3>
            <p class="secondary-text ps-1 name-username">@<%= user.username %></p>
          </div>
          <p><%= user.bio %></p>
          <p>Joined on <%= user.created_at.strftime("#{current_user.created_at.day.ordinalize} of %b, %Y") %></p>
        </div>
        <p class="mb-2 pb-1"><%= user.bio %></p>
        <div class="d-flex justify-content-start rounded-3 p-2 mb-2">
        <% chatroom = Chatroom.find_by(user_1: user, user_2: current_user) || chatroom = Chatroom.find_by(user_2: user, user_1: current_user)   %>
          <% if chatroom.nil? %>
            <%= button_to "Message ðŸ“¨", chatrooms_path(receiver: user), class: "moosician-btn" %>
          <% else %>
            <%= link_to "Message ðŸ“¨", chatroom_path(chatroom), class: "moosician-btn" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
