<div class="container">
  <div class="row" data-controller="chat-details">
    <div class="col-xl-3 mt-3"> <%= render "shared/profile_vertical" %> </div>

  <div class="col-xl-3 mt-3">
    <% @last_messages.each do |message|  %>
      <% unless message.nil?  %>
        <div class="container py-1">
        <%= render partial: "messagePreview", locals: { message: message, chatroom: message.chatroom } %>
          </div>
      <% end %>
    <% end  %>
  </div>

  <div class="col-xl-6 my-3 mb-3" data-chat-details-target="container"></div>
</div>
