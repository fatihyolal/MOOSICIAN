<div class="message-card col-3 col-m-3 col-xs-16">
    <div class="d-flex p-4">
      <div class="flex-shrink-0">
        <%= cl_image_tag message.user.photo.key %>
      </div>
      <div class="flex-grow-1 ms-3">
        <div class="d-flex justify-content-start rounded-3 p-2 mb-2">
        <div class="details">
            <div class="name"> <%= message.user.first_name %> <%= message.user.last_name %>
              <%= link_to message.user.username, chatroom_path(message.chatroom), data: { action: "click->chat-details#show:prevent" } %>
            </div>
            <div class="date"></i> <%= message.created_at.strftime("received at %I:%M%p on %m/%d/%Y")  %>
          </div>
        </div>
      </div>
     </div>
  </div>
</div>
