<div class="container chatroom" data-controller = "chatroom-subscription" data-chatroom-subscription-chatroom-id-value=<%= @chatroom.id %>>
  <h1>#<%= @chatroom.id %></h1>
    <div class="messages" data-chatroom-subscription-target = "messages">
    <% @chatroom.messages.each do |message| %>
      <%
=begin%>
 <div id="message-<%= message.id %>">
        <small>
          <strong><%= message.user.username %></strong>
          <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
        </small>
        <p><%= message.content %></p>
      </div>
<%
=end%>

    <% @chatroom.messages.each do |message| %>
    <%= render "messages/message", message: message %>
    <% end %>
    <% end %>
    </div>

    <%= simple_form_for [@chatroom, @message],
      html: { data: { action: "turbo:submit-end->chatroom-subscription#resetForm" }, class: "d-flex" } do |f|
    %>
    <%= f.input :content,
      label: false,
      placeholder: "Message ##{@chatroom.id}",
      wrapper_html: {class: "flex-grow-1"},
      input_html: {class: "w-100 chatroom-text-input"}
    %>
    <%= f.button :button, class: "chatroom-form-btn" do %>
      <i class="fa-solid fa-paper-plane fa-2xl icon"></i>
    <% end %>
    <% end %>
</div>
